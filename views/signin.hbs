<div class="container d-flex justify-content-center mb-5" style="height: 650px;"> 
  <div class="card mt-5" style="width: 70%">
    <div class="card-header d-flex justify-content-center">
      <h5>Account Login</h5>
    </div>
    <div class="d-flex flex-row" style="height: 480px;">
      <div style="width: 40%">
        <div class="card" style="height: 26rem; width: 18rem;">
          <img src="https://images.pexels.com/photos/3687770/pexels-photo-3687770.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500" class="card-img-top" alt="...">
          <div class="card-body">
            <p class="card-text">
            </p>
          </div>
        </div>
      </div>
      <div class="card-body d-flex align-items-center" style= "width: 60%; height: 450px;">
        <form class="form-signin" action="/signin" method="POST" style="width: 100%;">
          <div class="form-row mb-3">
            <label class="form-label" for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Email" required
              value="{{ email }}">
          </div>
          <div class="form-row mb-3 mt-3">
            <label class="form-label" for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Password" required>
            {{> messages}}
          </div>
          <div class="mt-5 d-flex align-items-end" style="height:100px;">
            <button class="btn btn-outline-primary btn-block" type="submit">Submit</button>
          </div>
          
        </form>
      </div>
    </div>
    <div class="me-3 text-end">
      <p>No Account? <a href="/signup"> Register</a></p>
    </div>

    
  </div>
</div>