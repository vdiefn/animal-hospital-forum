{{#if error_messages}}
<div class="d-flex justify-content-center">
  <div class="alert alert-danger alert-dismissible fade show" style="width: 100%;" role="alert">
    {{ error_messages }}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
</div>
{{/if}}



{{#if success_messages}}
<div class="d-flex justify-content-start">
  <div class="alert alert-success alert-dismissible fade show" style="width: 100%;" role="alert">
    {{ success_messages }}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
</div>
{{/if}}

{{#if warning_messages}}
<div class="alert alert-warning alert-dismissible fade show" role="alert">
  {{ warning_messages }}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

{{#if wrong_messages}}
<div class="error d-flex justify-content-start" style="font-size: 14px; color: #FC5A5A;">
  {{wrong_messages}}
</div>
{{/if}}

{{#if errors}}
{{#each errors}}
<div class="d-flex justify-content-center">
  <div class="alert alert-danger alert-dismissible fade show" style="width: 70%;" role="alert">
    {{ this.message }}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
    </button>
  </div>
</div>

{{/each}}
{{/if}}