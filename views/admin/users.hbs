<div class="container">
  <div class="d-flex justify-content-start align-items-center">
    <div class="d-flex">
      <h4 class="fw-bold" style="color:#0F0F0F;">網站後台</h4>
    </div>
    {{#if user.isAdmin }}
    <div class="ms-5">
      <a class="btn btn-link ps-2 pe-2" href="/users/{{user._id}}" style="text-decoration:none; ">
        <h5 class="fw-bold" style="color: #5179bd;">前台管理</h5>
      </a>
    </div>
    {{/if}}
  </div>
  <div class="d-flex mt-2">
    <a href='/admin/hospitals/create'>
      <button type="button" class="btn btn-outline-primary">新增醫院</button>
    </a>
  </div>
  
  <br />
  <br />
  {{> nav-tabs route='admin/users'}}
  
  <table class="table align-middle mb-5">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col" class="d-flex ms-2">Name</th>
        <th scope="col">Email</th>
        <th scope="col" style="width: 150px;">Role</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {{#each users}}
      <tr>
        <td scope="row" style="width:300px;">{{this._id}}</td>
        <td>
          <a class="btn btn-link link-primary" style="text-decoration:none;" href="/admin/users/{{this._id}}">
            {{this.name}}
          </a>
        </td>
        <td style="width: 280px;">{{this.email}}</td>
        <td class="d-flex align-items-center" style="width: 150px;">
          {{#if isAdmin}}
          <div class="d-flex mt-3">
            <p class="fw-bold">管理員</p>
          </div>
          {{else}}
          <div class="d-flex mt-3">
            <p>一般使用者</p>
          </div>
          {{/if}}
        </td>
        <td>
          {{#if isAdmin}}
          <div>

          </div>
          {{else}}
          <form action="/admin/users/{{this._id}}?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-link link-danger" style="text-decoration:none;"
              onclick="return confirm(`確定要刪除 {{ this.name }} 嗎？`)">Delete</button>
          </form>
          {{/if}}
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

</div>
