{{> messages}}
<div class="row mb-3">
  <div class="d-flex col-md-12 align-items-center">
    <h1>{{hospital.name}}</h1><h3 class="fw-bold">&ensp;•&ensp;後台</h3> 
  </div>
  <div class="col-md-5">
    <img class="img-responsive center-block mb-5" src="{{hospital.image}}"
      style="width: 400px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
    <div class="well">
      <ul class="list-unstyled mb-4">
        <li><strong>電話:</strong> {{hospital.telephone}}</li>
        <li><strong>地址:</strong> {{hospital.address}}</li>
        <li><strong>營業時間:</strong> {{hospital.openingHours}} - {{hospital.closingHours}}</li>
        <li><strong>是否提供急診服務:</strong>
          {{#if hospital.hasER }}
          <i class="fa-regular fa-circle-check fs-5" style="color: #115f07;"></i>
          {{else}}
          <i class="fa-regular fa-circle-xmark fs-5" style="color: #a21607;"></i>
          {{/if}}
        </li>

        <li><strong>網站：</strong> <a href="{{hospital.website}}" target="_blank">{{hospital.website}}</a></li>
      </ul>
    </div>
  </div>
  <div class="col-md-7" >
    <p style="white-space: break-spaces; word-wrap: break-word">{{hospital.description}}</p>
  </div>
<hr>
</div>
<div class="d-flex mb-3">
  <div class="me-auto p-2">
    <a class="btn btn-outline-success" href="/admin/hospitals/{{ hospital._id }}/edit">修改</a>
    <a class="btn btn-outline-secondary" href="javascript:history.back()">Back</a>
  </div>
  <div class="p-2">
    <form action="/admin/hospitals/{{this._id}}?_method=DELETE" method="POST" style="display: inline;">
      <button type="submit" class="btn btn-outline-danger link-danger" style="text-decoration:none;"
        onclick="return confirm(`確定要刪除 {{ this.name }} 嗎？`)">Delete</button>
    </form>
  </div>
</div>

