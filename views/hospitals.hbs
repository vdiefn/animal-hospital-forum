<!-- Hospital list -->
<div class="container mt-5">
  
  <div class="row">
    <!-- Carousel -->
    <!-- end -->
    <div class="container d-flex flex-row-reverse" style="position:fixed; right:270px; top:630px; z-index:1; ">
      <div class="card text-center mb-2" style="width:3rem; height:9rem;border: 4px solid #315faf">
        <a href="./hospitals/new" class="card-link btn btn-light mt-1 fw-bold fs-6" style="color:#0b234c">
        <i class="fa-solid fa-house-medical" style="color: #315faf;"></i>
        新增醫院</a>
      </div>
    </div>
 
    <div class="col-md-12 col-12 mx-auto">
      {{> messages}}
      <div class="row row-cols-sm-4">
        {{#each hospitals}}
        <!-- The First Hospital -->
        <a href="./hospitals/{{this._id}}" class="text-secondary" style="text-decoration:none;">
          <div class="card mb-3" style="width: 310px; height: 450px;">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}" width="300px;" height= "550px">

            <div class="card-body p-3">
              <h6 class="card-title mb-1 fs-6 fw-bolder" style=" text-decoration: none;">{{this.name}}</h6>
          
              <div class="hospital-category mb-1" style="font-size: 18px;">
                <i class="fa-solid fa-at" style="color: #334d7a; font-size: 16px;"></i> {{this.address}}
              </div>

              <div class="hospital-category mb-1" style="font-size: 18px;">
                <i class="fa-solid fa-phone" style="color: #334d7a; font-size: 16px;"></i> {{this.telephone}}
              </div>

              <div class="hospital-category mb-1" style="font-size: 18px;">
                <i class="fa-regular fa-hospital" style="color: #334d7a; font-size: 16px;"></i> 急診服務： {{#if this.hasER }}
                <i class="fa-regular fa-circle-check fs-5" style="color: #115f07;"></i>
                {{else}}
                <i class="fa-regular fa-circle-xmark fs-5" style="color: #a21607;"></i>
                {{/if}}
              </div class="restaurant-category mb-1">

              <div class="hospital-category mt-4 d-flex justify-content-end">
                <i class="fa-solid fa-heart me-2" style="color: #f01919;"></i>
                <i class="fa-regular fa-heart" style="color: #6b6b70;"></i>
              </div>
            </div>
          </div>
        </a>
        {{/each}}
      
        
      </div>
    </div>
  </div>
</div>